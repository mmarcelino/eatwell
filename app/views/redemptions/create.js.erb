  <% if @current_token_wallet >= @offer.token_value %>
    swal({
             title: "Enjoy your offer!",
             text: "Check your email for details.",
             icon: "success",
             buttons: {
              profile: {
                text: "See my profile",
                value: "profile"

              }
             }
           },
           )
           .then((value) => {

            // This only happens after btn clicked
           // REDIRECT AND CONTROLLER ACTION

           // Redirect the user
           if (value == "profile") {
            window.location.href = "users/dashboard";

           }
           else {
            window.location.href = window.location.href
          }
           });
  <% else %>
    swal({
             title: "Sorry, you don't have enough points!",
             text: "Check-in to get some more.",
             icon: "error",
             buttons: {
              ok: {
                text: "Ok",
                value: "gotorests"
              }
             }
           },
           )
           .then((value) => {

            // This only happens after btn clicked
           // REDIRECT AND CONTROLLER ACTION

           // Redirect the user
           if (value == "gotorests") {
            window.location.href = "restaurants";
            }
            else {
              window.location.href = window.location.href
            }

           });

  <% end %>

