<%= simple_form_for([ @restaurant, @review ]) do |form| %>
  <%= form.input :content, placeholder: 'You can leave your review here', label: false, as: :text %>
  <%= form.input :rating, placeholder: 'Please rate this restaurant (1 - 5)', label: false, as: :string %>
  <%= form.button :submit, value:'Submit'%>
<% end %>
