<% content_for :navbar do %>
  <div class="top-section">
    <%= render 'shared/navbar_index' %>
    <div class="container">
      <%= render 'shared/searchbar' %>
    </div>
  </div>
<% end %>

<div class="body-section wrapper">
  <div class="container">
    <div class="search-page-row row">
<!-- Cards container -->
      <div class="col-xs-12 col-md-8">
        <div class="container-fluid cards-container">
          <div class="row">
            <div class="col-xs-12 col-md-4">
            <!-- card -->
              <%= render 'restaurants/restaurant' %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-4">
        <div class="map-container">
          <div id="map" data-markers="<%= @markers.to_json %>"></div>
        </div>
      </div>

    </div>
  </div>
</div>






