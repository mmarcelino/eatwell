    <%= form_tag(restaurants_path, method: "get") do %>
      <%= text_field_tag :place,
      params[:place],
      class: "form-control",
      placeholder: "Location search...", id: "restaurant_address" %>

      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Search by restaurant, cuisine, location ..." %>
      <%= submit_tag "Search", class: "btn btn-block btn-primary" %>
    <% end %>
  </div>
