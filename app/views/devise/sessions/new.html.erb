<div class="wrapper-sign-up">
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 class="sign-up-title" style="margin-bottom: 20px; margin-top: 0px;">Sign in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label_html: { class: "type" },  input_html: { class: "recognitionStyling" } %>
          <%= f.input :password, required: false, label_html: { class: "type" },  input_html: { class: "recognitionStyling" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "form-button-sign-in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
